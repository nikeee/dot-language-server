{
  "name": "dot-language-server",
  "version": "1.1.22",
  "description": "Language server for the DOT language",
  "author": "Niklas Mollenhauer",
  "license": "MIT",
  "scripts": {
    "bundle": "pkg package.json",
    "clean": "rimraf lib",
    "compile": "tsc",
    "test": "tsc --noEmit",
    "prepare": "npm run clean && npm run compile"
  },
  "bin": {
    "dot-language-server": "bin/server.js"
  },
  "keywords": [
    "graphviz",
    "dot",
    "language",
    "server",
    "protocol",
    "gv",
    "lsp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nikeee/dot-language-server.git"
  },
  "dependencies": {
    "dot-language-support": "^2.0.3",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.5",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/node": "^18.7.13",
    "@types/yargs": "^17.0.11",
    "pkg": "^5.8.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.2"
  },
  "engines": {
    "node": ">=16"
  }
}
