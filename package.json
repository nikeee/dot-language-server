{
  "name": "dot-language-server",
  "version": "1.2.1",
  "description": "Language server for the DOT language",
  "author": "Niklas Mollenhauer",
  "license": "MIT",
  "scripts": {
    "bundle": "pkg package.json",
    "clean": "rimraf lib",
    "compile": "tsc",
    "ci": "biome ci ./src",
    "format": "biome format --write ./src",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --apply ./src",
    "test": "tsc --noEmit",
    "prepare": "npm run clean && npm run compile"
  },
  "bin": {
    "dot-language-server": "bin/server.js"
  },
  "keywords": [
    "graphviz",
    "dot",
    "language",
    "server",
    "protocol",
    "gv",
    "lsp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nikeee/dot-language-server.git"
  },
  "dependencies": {
    "dot-language-support": "^2.2.1",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.11",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.3",
    "@types/node": "^20.10.5",
    "@types/yargs": "^17.0.32",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-linux-arm64",
      "node18-macos-arm64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": ">=18"
  }
}
